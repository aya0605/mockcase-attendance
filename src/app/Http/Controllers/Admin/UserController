<?php

namespace App\Http\Controllers\Admin;

use App\Http\Controllers\Controller;
use Illuminate\Http\Request;
use App\Models\User;

class UserController extends Controller
{
    public function index()
    {
        $users = User::all();
        
        return view('admin.users.index', compact('users'));
    }

    public function show($id)
    {
        $user = User::with(['attendances', 'applications.attendance'])->findOrFail($id);
        
        $attendances = $user->attendances()->orderBy('work_date', 'desc')->paginate(10);
        
        $applications = $user->applications()->with('attendance')->orderBy('created_at', 'desc')->get();
        
        return view('admin.users.show', compact('user', 'attendances', 'applications'));
    }
}
